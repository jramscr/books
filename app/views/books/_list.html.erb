<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher House</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class="js--searchableComponent">
        <td class="js--searchCriteria"><%= link_to book.title, book %></td>
        <td class="js--searchCriteria"><%= link_to book.publisher_house.name, publisher_house_path(book.publisher_house) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

